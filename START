case $choice in
    1) cat README.md | less ;;
    2) cat HOW-TO-START.md | less ;;
    3) cat COMPLETE-CURRICULUM-SUMMARY.md | less ;;
    4) cat PROGRESS.md | less ;;
    5) cd 01-basics && cat lesson01-first-kernel.cu | less ;;
    6) cd resources && cat cheatsheet.md | less ;;
    7) cd 05-projects && ls -la *.cu ;;
    *) echo "Happy GPU coding! üöÄ" ;;
esac